<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohamed_abdelsamad.scorekeeper.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/rusia"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/pading"
                android:src="@drawable/russia" />

            <TextView
                android:id="@+id/rusiascore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pading"
                android:text="@string/score"
                android:textSize="@dimen/text"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pading"
                android:text="@string/underscore"
                android:textSize="@dimen/text" />

            <TextView
                android:id="@+id/egyptscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pading"
                android:text="@string/score"
                android:textSize="@dimen/text" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/egypt"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/pading"
                android:src="@drawable/egypt" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/colorPrimaryDark">

            <Button
                android:id="@+id/buton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:onClick="update"
                android:padding="@dimen/pading"
                android:text="@string/touch_down_6" />

            <Button
                android:id="@+id/buton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:onClick="update"
                android:padding="@dimen/pading"
                android:text="@string/touch_down_6" />

            <Button
                android:id="@+id/buton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:onClick="update"
                android:padding="@dimen/pading"
                android:text="@string/ex_point_1" />

            <Button
                android:id="@+id/buton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:onClick="update"
                android:text="@string/ex_point_1" />

            <Button
                android:id="@+id/buton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:onClick="update"
                android:padding="@dimen/pading"
                android:text="@string/goal_3" />

            <Button
                android:id="@+id/buton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:onClick="update"
                android:padding="@dimen/pading"
                android:text="@string/goal_3" />

            <Button
                android:id="@+id/buton7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:onClick="update"
                android:padding="@dimen/pading"
                android:text="@string/safty_2" />

            <Button
                android:id="@+id/buton8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:onClick="update"
                android:padding="@dimen/pading"
                android:text="@string/safty_2" />
        </GridLayout>

        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@color/balck"
            android:onClick="resetscore"
            android:padding="@dimen/pading"
            android:text="@string/reset"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
